@model CougModels.CougProgram

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requirements)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalRequired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovalRequired)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    @foreach (var user in ViewBag.Users)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@user.Coug.Name</h5>
                @if (!user.Approved)
                {
                    <a asp-action="Details" asp-route-id="@Model.Id" asp-route-cougID="@user.Coug.Id" asp-route-approve="true">Approve</a>
                    <a asp-action="Details" asp-route-id="@Model.Id" asp-route-cougID="@user.Coug.Id" asp-route-approve="false">Disapprove</a>
                }
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
