@model CougModels.CougProgram

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requirements)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalRequired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovalRequired)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    @foreach (var user in ViewBag.Users)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@user.Coug.Name</h5>
                @if (!user.Approved)
                {
                    <form asp-action="Approve" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Approve" class="btn btn-success" />
                    </form>
                    <form asp-action="Disapprove" method="delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Disapprove" class="btn btn-danger" />
                    </form>
                }
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
