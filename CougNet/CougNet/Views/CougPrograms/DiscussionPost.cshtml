@model CougModels.ViewModels.CougProgramDiscussion

@{
    ViewData["Title"] = "DiscussionPost";
}

<h1>@Model.PageTitle</h1>

<div>
    <form asp-action="DiscussionPost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control" text-wrap:normal type="text" placeholder="Type message here..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <br/>
        @Html.HiddenFor(m => m.CougProgramId)
        @Html.HiddenFor(m => m.parentID)
        <div class="form-group">
            <input type="submit" value="Post" class="btn btn-primary"/>
        </div>
    </form>
</div>